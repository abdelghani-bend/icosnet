<?xml version="1.0" ?>
<odoo>
    <record id="view_subscription_trial_form" model="ir.ui.view">
        <field name="name">subscription.trial.form</field>
        <field name="model">subscription.trial</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="trial_start"/>
                    <field name="trial_end"/>
                </group>
                <footer>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                    <button string="Submit" class="oe_highlight" type="object" name="action_submit_trial"/>
                </footer>
            </form>
        </field>
    </record>



</odoo>
