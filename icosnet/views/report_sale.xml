<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale.report_saleorder_raw">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang" />
                    <t t-call="icosnet.nv_report_sale_document" t-lang="lang" />
                </t>
            </t>
        </template>

        <template id="nv_report_sale_document">
            <t t-call="web.basic_layout">

                <style>
                    td {
                    border: 1px solid black;
                    }
                    p {
                    padding: 0!important;
                    margin:0!important;
                    }
                </style>
                <div t-attf-class="header">
                    <!-- <div name="left-upper-side">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                            style="max-height: 120px;" alt="Logo" />
                    </div> -->


                </div>
                <div class="backgroundimage" style="z-index:-1;position:absolute;top:0;left:0;width:100%;height:50%">
                    <img   t-att-src="'/icosnet/static/src/img/icosnet.png'" alt="Image"/>

                </div>
                <br></br><br></br><br></br><br></br><br></br>
                <br></br><br></br><br></br><br></br><br></br>
                <br></br><br></br><br></br><br></br><br></br>
                <br></br><br></br><br></br><br></br><br></br>
                <div class="row text-center mb-2">
                    <div class="col-6" style="margin: 0 auto;">
                        <table class="w-100">
                            <tr>
                                <td><strong>Numero:</strong></td>
                                <td><t t-esc="o.name" /></td>
                                <td><strong>Date:</strong></td>
                                <td><t t-esc="o.date_order" /></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <br></br><br></br><br></br><br></br><br></br>
                <br></br><br></br><br></br><br></br><br></br>
                <div class="row">
                    <div class="col-6" name="company_details">
                        <table>
                            <thead>
                                <tr>
                                    <th colspan="2" style="background: #666699; padding: 10px; color:white">A L’INTENTION DE</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">NOM – RAISON SOCIALE:</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.partner_id.name" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">ADRESSE :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_registre" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">R.C / AGREMENT :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_registre" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">NIF :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_nif" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">ART. IMPOSITION :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_article" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">TELEPHONE :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.phone" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">EMAIL :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.email" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                    <div class="col-6" name="client_details">
                        <table>
                            <thead>
                                <tr>
                                    <th colspan="2" style=" color:white ;background: #666699; padding: 10px; border: 1px solid black;">COORDONNES DE LIVRAISON</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">NOM – RAISON SOCIALE:</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.partner_id.name" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">ADRESSE :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_registre" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">R.C / AGREMENT :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_registre" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">NIF :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_nif" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">ART. IMPOSITION :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.number_article" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">TELEPHONE :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.phone" /></td>
                                </tr>
                                <tr>
                                    <td style="padding: 5px 5px 5px 10px;">EMAIL :</td>
                                    <td style="padding: 5px 5px 5px 10px;"><t t-esc="o.company_id.partner_id.email" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>


                <div class="mt-5">
                    <!-- <div class="row mb-5">
                        <div class="col-6" style="border: 1px solid black; padding: 5px;">
                            <h3>

                                <t t-if="o.state == 'sale'">
                                    <span>Bon de Commande N° :</span>
                                    <span t-if="o.name != '/'" t-field="o.name" />  
                                </t>
                                <t t-else="" >
                                    <span>Devis N° :</span>
                                    <span t-if="o.name != '/'" t-field="o.name" />
                                </t>
                                
                            </h3>
                        </div>

                      
                    </div> -->
                    <div class="page">


                        <t t-set="lines_to_report" t-value="o._get_order_lines_to_report()"/>
                        <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

                        <table class="table table-sm o_main_table table-borderless mt-4">
                            <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                            <thead style="background: #666699; color:white; width:100%!important;">
                                <tr>
                                    <th name="th_description" class="text-start">
                                        <span>DESIGNATION DE L’ARTICLE/ SERVICE</span>
                                    </th>
                                    <th name="th_quantity" class="text-end">
                                        <span>QUANTITE</span>
                                    </th>
                                    <th name="th_priceunit"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>PRIX UNITAIRE HT</span>
                                    </th>
                                    <th name="th_price_unit" t-if="display_discount"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Remise%</span>
                                    </th>
                                    <th name="th_subtotal" class="text-end">
                                        <span>MONTANT HT</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="lines_to_report" t-as="line">

                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" />

                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td name="td_name"><span t-field="line.name"/></td>
                                            <td name="td_quantity" class="text-end">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom"/>
                                            </td>
                                            <td name="td_priceunit" class="text-end">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount" class="text-end">
                                                <span t-field="line.discount"/>
                                            </td>

                                            <td t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                                                <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>

                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                                        <tr class="is-subtotal text-end">
                                            <td name="td_section_subtotal" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix mb-4">
                            <div id="total" class="row">
                                <div
                                        t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                    <table class="table table-sm" style="page-break-inside: avoid;">

                                        <!--Tax totals-->
                                        <t t-set="tax_totals" t-value="o.tax_totals" />
                                        <t t-call="account.document_tax_totals" />


                                    </table>
                                </div>
                            </div>

                        </div>




                    </div>
                </div>


                <div class="row">
                    <div class="col-6">
                        <div style="width: 20%; background: red">
                            <table>
                                <tr>
                                    <td style="background: #666699; padding: 10px; color:white">L'EDN</td>

                                </tr>
                                <tr >
                                    <td ></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="col-6">
                        <div style="width: 20%">
                            <table>
                                <tr>
                                    <td style="background: #666699; padding: 10px; color:white">LE FOURNISSEUR</td>

                                </tr>
                                <tr >
                                    <td ></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>

                <div class="footer">

                    <div class="row">
                        <div class="col-4">
                            Centre des affaires EL Qods
                        </div>
                        <div class="col-4 text-center">
                            <a href="www.icosnet.com">www.icosnet.com</a>
                        </div>
                        <div class="col-4" >
                            <span style="float:right">Tél : +213 21 993 342</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 float-left">
                            Tour central, 6éme niveau. Chéraga
                        </div>
                        <div class="col-4 text-center">
                            <a href="mailto:contact@icosnet.com">contact@icosnet.com</a>

                        </div>
                        <div class="col-4 float-right">
                            <span style="float:right">FAX : +213 770 175 190</span>
                        </div>
                    </div>
                </div>


            </t>
        </template>

        <record id="paperformat_icosnet_1" model="report.paperformat">
            <field name="name">Icosnet Paper Format</field>
            <field name="default" eval="False"/>
            <field name="disable_shrinking" eval="False"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="nv_report_sale" model="ir.actions.report">
            <field name="name">Bon de commande</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sale.report_saleorder</field>
            <field name="report_file">sale.report_saleorder</field>
            <field name="print_report_name">'Bon de Commande-%s' % object.name</field>
            <field name="binding_model_id" ref="model_sale_order" />
            <field name="paperformat_id" ref="icosnet.paperformat_icosnet_1"/>
            <field name="binding_type">report</field>
        </record>


    </data>
</odoo>