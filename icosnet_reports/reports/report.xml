<?xml version ="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_icosnet" model="report.paperformat">
            <field name="name">Icosnet Paper Format</field>
            <field name="default" eval="False"/>
            <field name="disable_shrinking" eval="False"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_spacing">0</field>
            <field name="dpi">70</field>
        </record>

        <record id="action_english_quote_report" model="ir.actions.report">
            <field name="name">Devis / Commande Anglais</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">icosnet_reports.english_quote_report</field>
            <field name="report_file">icosnet_reports.english_quote_report</field>
            <field name="print_report_name">'Devis en anglais'</field>
            <field name="binding_model_id" ref="model_sale_order" />
            <field name="paperformat_id" ref="icosnet_reports.paperformat_icosnet"/>
            <field name="binding_type">report</field>
        </record>

    </data>

</odoo>    